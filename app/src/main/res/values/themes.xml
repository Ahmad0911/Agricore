<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Agricore" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Surface colors -->
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="colorSurfaceVariant">@color/purple_100</item>
        <item name="colorOnSurfaceVariant">@android:color/black</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorOnBackground">@android:color/black</item>

        <!-- Error colors -->
        <item name="colorError">@android:color/holo_red_light</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Window flags for proper scrolling -->
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Chip styling -->
        <item name="chipStyle">@style/Widget.Material3.Chip.Assist</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Material3.BodySmall</item>

        <!-- Card view styling -->
        <item name="materialCardViewStyle">@style/PurpleCardView</item>

        <!-- Ensure proper touch handling -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- Toolbar title style -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Action bar style -->
    <style name="PurpleActionBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/purple_500</item>
        <item name="titleTextStyle">@style/ToolbarTitleStyle</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Menu item text style -->
    <style name="PurpleMenuItemText" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Overflow menu style -->
    <style name="PurpleOverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/purple_500</item>
    </style>

    <!-- Card view style - reduced elevation to prevent touch issues -->
    <style name="PurpleCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/purple_400</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/purple_700</item>
    </style>

    <!-- Purple Search Card style - reduced elevation -->
    <style name="PurpleSearchCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/purple_500</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">25dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Search view styling -->
    <style name="PurpleSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/purple_500</item>
        <item name="queryHint">Search products...</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!-- Search toolbar style -->
    <style name="PurpleSearchToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/purple_500</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Action bar theme -->
    <style name="PurpleActionBarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="searchViewStyle">@style/PurpleSearchView</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <!-- Category pill styles - reduced elevation -->
    <style name="CategoryPillActive" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/purple_500</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/purple_700</item>
    </style>

    <style name="CategoryPillInactive" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/purple_200</item>
    </style>

    <!-- Modern button style -->
    <style name="ModernButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/toolbar_gradient_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">25dp</item>
        <item name="elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>